@page "/"

<PageTitle>Login - Noten-Manager</PageTitle>

<nav class="navbar navbar-expand-lg border-bottom shadow-sm @(IsDark ? "bg-dark navbar-dark" : "bg-white")">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="https://www.edu.ch/media/wysiwyg/edu/schulen/gibz.png?v=1" alt="GIBZ Logo" height="40">
        </a>

        <div class="d-flex align-items-center ms-auto gap-2">
            <!-- Theme toggle -->
            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" role="switch"
                       checked="@IsDark"
                       @onchange="ToggleTheme" />
                <label class="form-check-label small ms-1">
                    <i class="bi @(IsDark ? "bi-moon-stars-fill" : "bi-sun-fill")"></i>
                </label>
            </div>

            <div class="vr mx-2"></div>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="register">
                        <i class="bi bi-person-add"></i> Registrieren
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active fw-bold" href="/">
                        <i class="bi bi-person-circle"></i> Login
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container py-5 @(IsDark ? "text-light" : "text-dark")">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold @(IsDark ? "text-primary text-opacity-75" : "text-primary")">Noten-Manager</h2>
                <p class="text-muted">Bitte melden Sie sich an</p>
            </div>

            <div class="card shadow border-0 rounded-3 @(IsDark ? "bg-dark text-light" : "")">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4">Login</h4>

                    <form @onsubmit="HandleLogin" @onsubmit:preventDefault>
                        <div class="mb-3">
                            <label class="form-label">E-Mail Adresse</label>
                            <div class="input-group">
                                <span class="input-group-text @(IsDark ? "bg-secondary text-light" : "bg-light")">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email"
                                       class="form-control @(IsDark ? "bg-secondary text-light border-light" : "")"
                                       @bind="Email"
                                       required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Passwort</label>
                            <div class="input-group">
                                <span class="input-group-text @(IsDark ? "bg-secondary text-light" : "bg-light")">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password"
                                       class="form-control @(IsDark ? "bg-secondary text-light border-light" : "")"
                                       @bind="Password"
                                       required />
                            </div>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Einloggen
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @ErrorMessage
                        </div>
                    }
                </div>

                <div class="card-footer text-center py-3 @(IsDark ? "bg-secondary text-light" : "bg-light") border-0 rounded-bottom-3">
                    <small>
                        Noch keinen Account?
                        <a href="register" class="text-decoration-none @(IsDark ? "text-info" : "")">
                            Hier registrieren
                        </a>
                    </small>
                </div>
            </div>

        </div>
    </div>
</div>