        {
            <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title">Anfrage bearbeiten (nur solange offen)</h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CloseTeacherEdit"></button>
                        </div>
                        <div class="modal-body">
                            @if (!string.IsNullOrWhiteSpace(editError))
                            {
                                <div class="alert alert-danger">@editError</div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Modul</label>
                                <input class="form-control" @bind="editForm.ModuleName" />
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Klasse</label>
                                    <input class="form-control" @bind="editForm.CourseName" />
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label class="form-label">Schüler</label>
                                    <input class="form-control" @bind="editForm.StudentName" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Note</label>
                                    <input type="number" step="0.1" min="1" max="6" class="form-control" @bind="editForm.GradeValue" />
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label class="form-label">Bemerkung</label>
                                    <textarea class="form-control" rows="3" @bind="editForm.Comment"></textarea>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Rektor</label>
                                <select class="form-select" @bind="editForm.RektorId">
                                    <option value="0">-- Wählen Sie einen Rektor --</option>
                                    @foreach (var r in Rektoren)
                                    {
                                        <option value="@r.Id">@r.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-light" @onclick="CloseTeacherEdit">Abbrechen</button>
                            <button class="btn btn-primary" @onclick="SaveTeacherEdit">
                                Speichern
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
