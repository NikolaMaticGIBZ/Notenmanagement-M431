    // Reflection helpers (avoid compile errors if DTO missing props)
    private static string? GetString(object obj, string prop)
    {
        var p = obj.GetType().GetProperty(prop, BindingFlags.Public | BindingFlags.Instance | BindingFlags.IgnoreCase);
        return p?.GetValue(obj)?.ToString();
    }

    private static DateTime? GetCreatedAt(object obj)
    {
        var p = obj.GetType().GetProperty("CreatedAt", BindingFlags.Public | BindingFlags.Instance | BindingFlags.IgnoreCase)
             ?? obj.GetType().GetProperty("created_at", BindingFlags.Public | BindingFlags.Instance | BindingFlags.IgnoreCase);

        var val = p?.GetValue(obj);
        return val is DateTime dt ? dt : null;
    }

    private static int? TryGetInt(object obj, string prop)
    {
        var p = obj.GetType().GetProperty(prop, BindingFlags.Public | BindingFlags.Instance | BindingFlags.IgnoreCase);
        var val = p?.GetValue(obj);
        if (val is int i) return i;
        if (val is long l) return (int)l;
        if (val is null) return null;
        if (int.TryParse(val.ToString(), out var parsed)) return parsed;
        return null;
    }

    private static void SetPropertyIfExists(object obj, string propName, object? value)
    {
        var p = obj.GetType().GetProperty(propName, BindingFlags.Public | BindingFlags.Instance | BindingFlags.IgnoreCase);
        if (p is null || !p.CanWrite) return;
        p.SetValue(obj, value);
    }

