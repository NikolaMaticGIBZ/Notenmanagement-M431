                @foreach (var g in PendingGrades)
                {
                    <div class="card shadow-sm border-0 mb-3 request-card">
                        <div class="card-body p-4">

                            @* Only show date/time if your GradeResponse has CreatedAt (optional) *@
                            @if (g.GetType().GetProperty("CreatedAt") != null)
                            {
