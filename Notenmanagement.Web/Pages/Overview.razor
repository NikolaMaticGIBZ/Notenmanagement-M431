                                    {
                                        <div class="mt-2 p-2 bg-body-tertiary border rounded small">
                                            <strong>Entscheid-Notiz:</strong> @decisionNote
                                        </div>
                                    }
                                </div>

                                <div class="text-center">
                                    <div class="fs-4 fw-bold border rounded px-4 py-2">@g.GradeValue</div>

                                    @if (status == "pending")
                                    {
                                        <div class="d-flex gap-2 mt-3 justify-content-center">
                                            <button class="btn btn-outline-primary btn-sm" @onclick="() => OpenTeacherEdit(g)">
                                                <i class="bi bi-pencil"></i> Bearbeiten
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteMyGrade(g.Id)">
                                                <i class="bi bi-trash"></i> Löschen
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }

