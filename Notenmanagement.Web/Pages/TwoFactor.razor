@page "/twofactor"
@inject NavigationManager NavManager

<div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow border-0 rounded-3 mt-4">
          <div class="card-body p-4 text-center">
            <div class="mb-3 text-primary">
              <i class="bi bi-shield-lock-fill" style="font-size: 3rem;"></i>
            </div>
            <h4 class="fw-bold mb-2">Zwei-Faktor-Auth</h4>
            <p class="text-muted small mb-4">
              Wir haben einen 6-stelligen Code an Ihre hinterlegte Email (example@example.com) gesendet.
            </p>
            <form @onsubmit="VerifyCode">
              <div class="mb-4">
                <label class="form-label visually-hidden">Sicherheitscode</label>
                <input type="text" class="form-control form-control-lg code-input" placeholder="000000"
                  maxlength="6" required>
              </div>
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                    @if(isLoading) 
                    { 
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> <span>Prüfen...</span>
                    } 
                    else 
                    { 
                        <span>Bestätigen</span> 
                    }
                </button>
              </div>
              <div class="text-center">
                <a href="#" class="text-decoration-none small text-muted">Code nicht erhalten? Erneut senden</a>
              </div>
              <div class="mt-3">
                <a href="/" class="text-decoration-none small text-danger"><i class="bi bi-arrow-left"></i> Zurück zum Login</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>

@code {
    private bool isLoading = false;
    
    [SupplyParameterFromQuery]
    public string? Role { get; set; } // Liest "?role=..." aus der URL

    private async Task VerifyCode()
    {
        isLoading = true;
        await Task.Delay(1000); // UI Simulation

        if (Role == "prorektor")
            NavManager.NavigateTo("prorektor");
        else
            NavManager.NavigateTo("teacher");
    }
}